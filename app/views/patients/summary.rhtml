<html>
  <head>
    <title>Family Tree</title>
    <script src="/javascripts/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script language="javascript" type="text/javascript" src="/javascripts/jquery.flot.js"></script>
    <script src="/javascripts/touchscreenYesNo.js" type="text/javascript"></script>
    <%= stylesheet_link_tag fancy_or_high_contrast_touch %>
    <script type="text/javascript">
      function voiding(node) {
        confirmYesNo("Void this item?", function() {
          hideConfirmation();
          
          $.post('/relationships/void/?id=' + node.attr('relationship'), {}, function(data, status) {
            if (status == 'success') node.remove();
            window.parent.location = "/patients/show/<%= @patient.id %>";
          })
        }, function() { hideConfirmation(); });
      }

      jQuery(document).ready(function($) {
        $('div.void').click(function() { voiding($(this)); return false; });
      })
    </script>
    <style>
      td {
        vertical-align: top;
      }
      #cell1 td {
        border-bottom: dotted 1px #ccc;
      }
    </style>
  </head>
  <body>
    <%session_date = session[:datetime].to_date rescue Date.today%>
    <table style="margin: 2px; width: 100%;" cellspacing="5">
      <tr>
        <td style="vertical-align: top; width: 50%; border: 1px solid #ccc; border-radius: 10px; height: 300px;">
          <table cellpadding="3" width="100%" id="cell1" cellspacing="3">
            <tr>
              <td>
                <img src="/images/male.gif" alt="M" />
              </td>
              <td colspan="3" style="min-width: 90%;">
                <b style="font-size: 1.2em;">Father</b>
                <% if !@father.nil?  %>
                  <div class="void" relationship="<%= @father.id %>" style="float: right;">
                    <img src="/images/cancel_flat_small_red.png" alt="X" />
                  </div>
                <% end %>
              </td>
            </tr>
            <% if @father.nil?  %>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td colspan="2">
                  <i>Undefined</i>
                </td>
              </tr>
            <% else %>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Name:</b>
                </td>
                <td>
                  <% @anc_father = ANCService::ANC.new(@father.relation.patient) %>
                  <%= @anc_father.name  rescue ""%>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Person ID:</b>
                </td>
                <td>
                  <%= @anc_father.national_id_with_dashes rescue "" %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Age:</b>
                </td>
                <td>
                  <%= @anc_father.age(session_date) rescue "" %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Nationality:</b>
                </td>
                <td>
                  <%= @anc_father.nationality rescue "" %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Current Address:</b>
                </td>
                <td>
                  <%= @anc_father.current_address1.to_s + ",<br />" + @anc_father.current_address2.to_s + ", <br />" +
                    @anc_father.current_district.to_s  rescue ""%>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Home Address:</b>
                </td>
                <td>
                  <%= @anc_father.home_village.to_s + (@anc_father.home_village.nil? ||
                      @anc_father.home_village.blank? ? "" : ",<br />") +
                    @anc_father.home_ta.to_s + (@anc_father.home_ta.nil? || @anc_father.home_ta.blank? ? "" : ",<br />") +
                    @anc_father.home_district.to_s  %>&nbsp;
                </td>
              </tr>
            <% end %>
          </table>
        </td>
        <td style="vertical-align: top; border: 1px solid #ccc; border-radius: 10px;">
          <table cellpadding="3" width="100%" id="cell1" cellspacing="3">
            <tr>
              <td>
                <img src="/images/female.gif" alt="M" />
              </td>
              <td colspan="3" style="width: 90%;">
                <b style="font-size: 1.2em;">Mother</b>
                <% if !@mother.nil?  %>
                  <div class="void" relationship="<%= @mother.id %>" style="float: right;">
                    <img src="/images/cancel_flat_small_red.png" alt="X" />
                  </div>
                <% end %>
              </td>
            </tr>
            <% if @mother.nil?  %>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td colspan="2">
                  <i>Undefined</i>
                </td>
              </tr>
            <% else %>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Name:</b>
                </td>
                <td>
                  <% @anc_mother = ANCService::ANC.new(@mother.relation.patient) %>
                  <%= @anc_mother.name.to_s + " (#{@anc_mother.maiden_name})"  %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Person ID:</b>
                </td>
                <td>
                  <%= @anc_mother.national_id_with_dashes  %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Age:</b>
                </td>
                <td>
                  <%= @anc_mother.age(session_date)  %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Nationality:</b>
                </td>
                <td>
                  <%= @anc_mother.nationality  %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Current Address:</b>
                </td>
                <td>
                  <%= @anc_mother.current_address1.to_s + ",<br />" + @anc_mother.current_address2.to_s + ", <br />" +
                    @anc_mother.current_district.to_s  %>
                </td>
              </tr>
              <tr>
                <td colspan="2">
                  &nbsp;
                </td>
                <td>
                  <b>Home Address:</b>
                </td>
                <td>
                  <%= @anc_mother.home_village.to_s + (@anc_mother.home_village.nil? ||
                      @anc_mother.home_village.blank? ? "" : ",<br />") +
                    @anc_mother.home_ta.to_s + (@anc_mother.home_ta.nil? || @anc_mother.home_ta.blank? ? "" : ",<br />") +
                    @anc_mother.home_district.to_s  %>&nbsp;
                </td>
              </tr>
            <% end %>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
